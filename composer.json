{
    "name": "gdn-dev/laragit-version",
    "description": "Simple Laravel package to manage versions using VERSION files or Git tags",
    "version": "1.0.1",
    "keywords": [
        "laravel",
        "version",
        "git",
        "versioning",
        "simple"
    ],
    "homepage": "https://github.com/gdn-dev/laragit-version",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Rosyid Izzulkhaq",
            "email": "rosyid@genilogi.id",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.0 || ^2.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "GenialDigitalNusantara\\LaragitVersion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GenialDigitalNusantara\\LaragitVersion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GenialDigitalNusantara\\LaragitVersion\\ServiceProvider"
            ],
            "aliases": {
                "LaragitVersion": "GenialDigitalNusantara\\LaragitVersion\\Facade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}